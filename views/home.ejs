<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <script
      src="https://kit.fontawesome.com/b01fffd6e3.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
    <h1 id="page-heading">
      <i class="fas fa-address-book"></i>
      My Contact List
    </h1>
    <div id="contact-list-container">
      <ul>
        <%for(let i of contact_list){ %>
        <li id="description">
          <div class="details">
            <p class="p1"><%= i.name%></p>
            <p class="p2"><%= i.phoneno%></p>
          </div>
          <div class="delete-button">
            <a href="/delete-contact/?id=<%= i._id%>">
              <i class="fas fa-window-close"></i>
            </a>
          </div>
        </li>
        <% } %>
      </ul>
    </div>
    <!-- Creating a form -->
    <form action="/create-contact" method="POST">
      <input type="text" name="name" placeholder="Name" />
      <input type="number" name="phoneno" placeholder="Phone" />
      <button type="submit">Add</button>
    </form>

    <script type="text/javascript" src="/js/home.js"></script>
  </body>
</html>
